{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ds": [
        "src/@ds/"
      ],
      "@api": [
        "src/api/"
      ],
      "@constants": [
        "src/constants/"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@context/*": [
        "src/context/*"
      ],
      
    },
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "noImplicitAny": false
  }
}